@model Brand

@{
    ViewData["Title"] = "Brand Edit";
}

<form asp-controller="Brand" asp-action="Edit" method="post">
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10 text-danger">
            @Html.ValidationMessageFor(x => x.Name)
        </div>
        <label for="inputName" class="col-sm-2 col-form-label">Brand</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Name" class="form-control" id="inputName">
        </div>
    </div>

    <div>
        <button class="btn btn-success" type="submit">Save</button>
        <a class="btn btn-danger" asp-action="Index" asp-controller="Brand" role="button">Cancel</a>
    </div>
</form>
