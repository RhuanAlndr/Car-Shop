@model List<Brand>

@{
    ViewData["Title"] = "Brand";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Brand</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Name</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@v.Id" role="button">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@v.Id" role="button">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<div>
    <a class="btn btn-secondary btn-sm" asp-action="Create" asp-controller="Brand" role="button">New brand</a>
    
</div>

