@{
    ViewData["Title"] = "List of Cars";
}

<h1>List of Cars</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th scope="col">Car</th>
            <th scope="col">Year</th>
            <th scope="col">Brand</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < ViewBag.Cars.Count; i++)
        {
            <tr>
                <th>@i</th>
                <td>@ViewBag.Cars[i].Name</td>
                <td>@ViewBag.Cars[i].Year</td>
                <td>@ViewBag.Cars[i].Brand.Name</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@ViewBag.Cars[i].Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@ViewBag.Cars[i].Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-secondary btn-sm" asp-controller="Car" asp-action="Create">New Car</a>
</div>
